<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:orientation="horizontal" android:layout_margin="5dp"
              android:layout_height="wrap_content">


    <ImageView android:id="@+id/thumbnail" android:src="@mipmap/ic_launcher" android:layout_width="60dp"
               android:orientation="horizontal"
               android:layout_height="60dp"/>


    <TextView android:id="@+id/photoname" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
              android:layout_gravity="center_vertical" android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
</LinearLayout>