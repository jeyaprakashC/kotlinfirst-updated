<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toTopOf="@+id/copyrite"
            app:layout_constraintLeft_toLeftOf="parent" android:id="@+id/icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <TextView android:layout_width="wrap_content" android:id="@+id/copyrite" android:layout_height="wrap_content"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.95"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
              android:text="@string/copyrite"
              app:layout_constraintTop_toTopOf="@+id/icon" app:layout_constraintHorizontal_bias="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>