<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">


    <ImageView android:layout_width="match_parent" android:id="@+id/usericon"
               app:layout_constraintVertical_bias="0.1"
               app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
               android:src="@mipmap/ic_launcher" app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toTopOf="@+id/name"
               android:layout_height="200dp"/>


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/name"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.5" app:layout_constraintVertical_bias="0.5" android:text="name"
              app:layout_constraintTop_toBottomOf="@+id/usericon"
              app:layout_constraintBottom_toTopOf="@+id/gender"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/gender"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:text="male"
              app:layout_constraintHorizontal_bias="0.5" app:layout_constraintVertical_bias="0.1"
              app:layout_constraintTop_toBottomOf="@+id/usericon"
              app:layout_constraintBottom_toTopOf="@+id/email"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/email"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.501" app:layout_constraintVertical_bias="0.01"
              android:text="jey@gmail.com"
              app:layout_constraintTop_toBottomOf="@+id/gender"
              app:layout_constraintBottom_toTopOf="@+id/address"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/address"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/email" android:text="asdasd asdasd adasdadasd"
              app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>